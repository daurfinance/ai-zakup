# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/ai-zakup-db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV=development

# Frontend URL
FRONTEND_URL="https://xlhyimcdvlo1.manus.space"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="AI-Zakup <noreply@ai-zakup.kz>"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# External APIs
BANK_API_URL="https://api.bank.kz"
BANK_API_KEY="your-bank-api-key"

# Monitoring
LOG_LEVEL="info"
ENABLE_SWAGGER=true
